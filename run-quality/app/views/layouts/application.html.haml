!!!
%html
  %head
    %title RunQuality
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    = javascript_include_tag "http://maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry"
    = javascript_include_tag "http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"

    = csrf_meta_tags
  %body
    .navbar.navbar-custom.navbar-fixed-top
      .navbar-header
        %a.navbar-brand{:href => "#"} Brand
        %a.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .navbar-collapse.collapse
        %ul.nav.navbar-nav
          %li.active
            %a{:href => "#"} Home
          %li
            %a{:href => "#"} Link
          %li
            %a{:href => "#"} Link
          %li
        %form.navbar-form
          .form-group{:style => "display:inline;"}
            .input-group
              .input-group-btn
                %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
                  %span.glyphicon.glyphicon-chevron-down
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"} Category 1
                  %li
                    %a{:href => "#"} Category 2
                  %li
                    %a{:href => "#"} Category 3
                  %li
                    %a{:href => "#"} Category 4
                  %li
                    %a{:href => "#"} Category 5
              %input.form-control{:placeholder => "What are searching for?", :type => "text"}/
              %span.input-group-addon
                %span.glyphicon.glyphicon-search
    #main.container-fluid
      = yield
  %footer
    = yield :scripts
